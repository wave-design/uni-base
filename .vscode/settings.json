{
  // 禁用prettier
  "prettier.enable": false,
  // 保存时执行的代码操作
  "editor.codeActionsOnSave": {
    // 执行所有可用的代码修复
    "source.fixAll": "explicit",
    // 执行 ESLint 代码修复
    "source.fixAll.eslint": "explicit"
  },
  // 启用快速建议功能
  "editor.quickSuggestions": {
    // 在其他上下文中启用快速建议
    "other": true,
    // 在注释中启用快速建议
    "comments": true,
    // 在字符串中启用快速建议
    "strings": true
  },
  "eslint.runtime": "node",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "css",
    "scss",
    "less",
    "markdown",
    "json",
    "json5",
    "jsonc",
    "yaml",
    "toml",
    "xml"
  ]
}
